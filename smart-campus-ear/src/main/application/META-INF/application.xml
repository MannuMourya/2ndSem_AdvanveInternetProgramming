<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                                 http://java.sun.com/xml/ns/javaee/application_6.xsd" version="6">
    <display-name>Smart Campus Management System EAR</display-name>
    <module>
        <ejb>smart-campus-ejb.jar</ejb>
    </module>
    <module>
        <web>
            <web-uri>smart-campus-web.war</web-uri>
            <context-root>/smart-campus</context-root>
        </web>
    </module>
    <module>
        <web>
            <web-uri>smart-campus-rest.war</web-uri>
            <context-root>/api</context-root>
        </web>
    </module>
</application>

